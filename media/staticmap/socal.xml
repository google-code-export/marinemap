<!DOCTYPE Map>
<Map bgcolor="steelblue" srs="+proj=latlong +datum=WGS84">

<Style name="land">
<Rule>
<PolygonSymbolizer>
<CssParameter name="fill">rgb(244,238,203)</CssParameter>
</PolygonSymbolizer>
<LineSymbolizer>
<CssParameter name="stroke">rgb(50%,50%,50%)</CssParameter>
<CssParameter name="stroke-width">0.1</CssParameter>
</LineSymbolizer>
</Rule>
</Style>

<Style name="region_style">
<Rule>
<LineSymbolizer>
<CssParameter name="stroke">rgb(5%,5%,5%)</CssParameter>
<CssParameter name="stroke-width">1</CssParameter>
</LineSymbolizer>
</Rule>
</Style>


<Layer name="land" srs="+proj=latlong +datum=WGS84" status="on">
<StyleName>land</StyleName>
<Datasource>
    <Parameter name="type">shape</Parameter>
    <Parameter name="file">MEDIA_ROOT/staticmap/data/socal_gshhs</Parameter>
</Datasource>
</Layer>

<Layer name="studyregion" status="on" srs="+init=epsg:3310">
    <StyleName>region_style</StyleName>
    <Datasource>
      <Parameter name="type">postgis</Parameter>
      <Parameter name="host">DATABASE_HOST</Parameter>
      <Parameter name="dbname">DATABASE_NAME</Parameter>
      <Parameter name="user">DATABASE_USER</Parameter>      
      <Parameter name="password">DATABASE_PASSWORD</Parameter>
      <Parameter name="table">(select geometry, name from mm_study_region) as region</Parameter>
    </Datasource>
</Layer>


</Map>
