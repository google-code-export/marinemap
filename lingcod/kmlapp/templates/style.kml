{% extends "base.kml" %}
{% block style %}
 {% for designation in designations %}
  <Style id="{{ designation.acronym }}-style">
    <PolyStyle>
        <color>{{ designation.poly_fill_color }}</color>
    </PolyStyle>
    <LineStyle>
        <color>{{ designation.poly_outline_color }}</color>
    </LineStyle>
    <BalloonStyle>
      <text>
        <![CDATA[
          <table>
           <tr><th>Id</th><td>$[mpaid]</td></tr>
           <tr><th>Name</th><td>$[name]</td></tr>
           <tr><th>User</th><td>$[user]</td></tr>
           <tr><th>Created</th><td>$[created]</td></tr>
           <tr><th>Modified</th><td>$[modified]</td></tr>
           <tr><th>Area</th><td>$[area]</td></tr>
           <tr><th>Designation</th><td>$[designation]</td></tr>
          </table>
        ]]>
      </text>
    </BalloonStyle>
  </Style>
 {% endfor %}
{% endblock %}
