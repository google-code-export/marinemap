{% extends "base.kml" %}
{% block style %}
 {% for designation in designations %}
  <Style id="{{ designation.acronym }}-style">
    <IconStyle>
        <!-- Almost transparent = it is hoverable/clickable but not really visible -->
        <color>01000000</color> 
        <colorMode>normal</colorMode>
        <!-- Use 0 if you want pushpin to be invisible (changes hover/click behavior) -->
        <scale>0.7</scale> 
        <Icon>
        <href>http://maps.google.com/mapfiles/kml/paddle/wht-blank.png</href>
        </Icon>
    </IconStyle>
    <BalloonStyle>
        <text> <![CDATA[
           <div>
            <p><strong>$[name]</strong></p>
            <p><em>$[designation]</em></p>
            <p>Created by $[user] on $[modified]</p>
           </div>
        ]]> </text>
    </BalloonStyle>
    <LabelStyle>
        <color>ffffffff</color>
        <scale>0.7</scale>
    </LabelStyle>
    <PolyStyle>
        <color>{{ designation.poly_fill_color }}</color>
    </PolyStyle>
    <LineStyle>
        <color>{{ designation.poly_outline_color }}</color>
    </LineStyle>
  </Style>
 {% endfor %}

  <!-- Default style for undesignated MPAs -->
  <Style id="defaultstyle">
    <IconStyle>
        <color>01000000</color> 
        <colorMode>normal</colorMode>
        <scale>0.7</scale> 
        <Icon> <href>http://maps.google.com/mapfiles/kml/paddle/wht-blank.png</href> </Icon>
    </IconStyle>
    <BalloonStyle>
        <text> <![CDATA[
           <div>
            <p><strong>$[name]</strong></p>
            <p><em>No designation</em></p>
            <p>Created by $[user] on $[modified]</p>
           </div>
        ]]> </text>
    </BalloonStyle>
    <LabelStyle>
        <color>ffffffff</color>
        <scale>0.7</scale>
    </LabelStyle>
    <PolyStyle>
        <color>778B1A55</color>
    </PolyStyle>
    <LineStyle>
        <color>ffffffff</color>
    </LineStyle>
  </Style>
{% endblock %}
